pkgname=holo-rust-packaging-tools
pkgver=0.1.1
pkgrel=4
pkgdesc="Packaging tools for Rust in Holo"
arch=(any)
url="https://github.com/evlav/rust-packaging/"
license=(MIT)
depends=(python)
makedepends=('python>=3.13'
             'python<3.14'
             python-build
             python-installer
             python-setuptools
             python-wheel)
source=(
  "$pkgname-$pkgver::git+https://github.com/evlav/rust-packaging.git#tag=v$pkgver"
)
sha256sums=(SKIP)

build() {
  cd $pkgname-$pkgver
  make build
}

package() {
  cd $pkgname-$pkgver
  DESTDIR="$pkgdir" make install
}
