pkgname=holo-keyring
_srctag=holo-20250801
pkgver=${_srctag#holo-}
pkgver=${pkgver//-/.}
pkgrel=1
pkgdesc='Holo PGP keyring'
arch=(any)
url='https://github.com/evlav/archlinux-keyring/'
license=(GPL)
groups=(holo-base)
install=$pkgname.install
makedepends=('git' 'python>=3.13' 'python<3.14' 'sequoia-sq>=1.0')
source=("$pkgname-$pkgver::git+https://github.com/evlav/archlinux-keyring#tag=$_srctag")
sha256sums=('6dd741d2f2e6b627aaefa96b3ba8ef702604d0271937f2bb69b6264bc10f1416')

package() {
  cd $pkgname-$pkgver
  make PREFIX=/usr DESTDIR="$pkgdir" install
}
